@model List<OzarkLMS.Models.TestResult>
@{
    ViewData["Title"] = "System Diagnostics";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-900">System Diagnostics</h1>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-sync-alt me-2"></i>Rerun Tests
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">Self-Test Results</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="py-3 ps-4">Test Name</th>
                            <th scope="col" class="py-3">Status</th>
                            <th scope="col" class="py-3">Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var result in Model)
                            {
                                <tr>
                                    <td class="ps-4 align-middle fw-medium">@result.TestName</td>
                                    <td class="align-middle">
                                        @if (result.Passed)
                                        {
                                            <span class="badge bg-success rounded-pill px-3 py-2">
                                                <i class="fas fa-check me-1"></i> PASS
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger rounded-pill px-3 py-2">
                                                <i class="fas fa-times me-1"></i> FAIL
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle text-muted">@result.Message</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center py-4 text-muted">
                                    No tests executed.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white py-3">
            <small class="text-muted">
                Run locally at @DateTime.Now
            </small>
        </div>
    </div>
</div>
