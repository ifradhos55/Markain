@model IEnumerable<OzarkLMS.Models.User>

@{
    ViewData["Title"] = "Employees";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-slate-800 dark:text-white">Employee Directory</h1>
        <a asp-action="Create" class="bg-[#047857] hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded-lg transition-colors flex items-center">
            <i data-lucide="user-plus" class="w-5 h-5 mr-2"></i> Add Employee
        </a>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm overflow-hidden border border-gray-100 dark:border-slate-700">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50 dark:bg-slate-900 border-b border-gray-100 dark:border-slate-700 text-xs uppercase text-slate-500 font-semibold">
                <tr>
                    <th class="p-4">Name</th>
                    <th class="p-4">ID</th>
                    <th class="p-4">Title</th>
                    <th class="p-4">Department</th>
                    <th class="p-4">Status</th>
                    <th class="p-4 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-slate-700 text-sm">
                @foreach (var item in Model) {
                    <tr class="hover:bg-gray-50 dark:hover:bg-slate-700/50 transition-colors">
                        <td class="p-4 font-medium text-slate-800 dark:text-white flex items-center">
                            @if(!string.IsNullOrEmpty(item.ProfilePictureUrl))
                            {
                                <img src="@item.ProfilePictureUrl" class="w-8 h-8 rounded-full mr-3 object-cover" />
                            }
                            else
                            {
                                <div class="w-8 h-8 rounded-full bg-emerald-100 text-emerald-600 flex items-center justify-center mr-3 font-bold">
                                    @item.Username.Substring(0,1).ToUpper()
                                </div>
                            }
                            @item.Username
                        </td>
                        <td class="p-4 text-slate-500">@item.EmployeeId</td>
                        <td class="p-4 text-slate-600 dark:text-slate-300">@item.JobTitle</td>
                        <td class="p-4">
                            @if(item.Department != null)
                            {
                                <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full dark:bg-blue-900 dark:text-blue-200">@item.Department.Name</span>
                            }
                            else
                            {
                                <span class="text-slate-400">-</span>
                            }
                        </td>
                        <td class="p-4">
                            <span class="@(item.EmploymentStatus == "Full-Time" ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200" : "bg-orange-100 text-orange-800") text-xs px-2 py-1 rounded-full">
                                @item.EmploymentStatus
                            </span>
                        </td>
                        <td class="p-4 text-right space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-500 hover:text-blue-700 font-medium">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-slate-500 hover:text-slate-700">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
