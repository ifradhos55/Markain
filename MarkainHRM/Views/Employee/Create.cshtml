@model OzarkLMS.Models.User

@{
    ViewData["Title"] = "Add Employee";
}

<div class="max-w-2xl mx-auto px-4 py-8">
    <div class="mb-6">
        <a asp-action="Index" class="text-slate-500 hover:text-slate-700 flex items-center text-sm mb-2">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-1"></i> Back to Directory
        </a>
        <h1 class="text-3xl font-bold text-slate-800 dark:text-white">Add New Employee</h1>
    </div>

    <form asp-action="Create" class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-100 dark:border-slate-700 p-6 space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Basic Info -->
            <div class="col-span-2">
                <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-200 mb-4 border-b border-gray-100 pb-2">Basic Information</h3>
            </div>

            <div>
                <label asp-for="Username" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Full Name</label>
                <input asp-for="Username" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" placeholder="John Doe" />
                <span asp-validation-for="Username" class="text-red-500 text-xs"></span>
            </div>
             <div>
                <label asp-for="Password" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Temporary Password</label>
                <input asp-for="Password" type="password" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" placeholder="******" />
                <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
            </div>
            
            <!-- Employment Details -->
            <div class="col-span-2 mt-4">
                <h3 class="text-lg font-semibold text-slate-700 dark:text-slate-200 mb-4 border-b border-gray-100 pb-2">Employment Details</h3>
            </div>

            <div>
                <label asp-for="EmployeeId" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Employee ID</label>
                <input asp-for="EmployeeId" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" placeholder="EMP-000" />
            </div>
            <div>
                 <label asp-for="Role" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">System Role</label>
                 <select asp-for="Role" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none">
                     <option value="employee">Employee</option>
                     <option value="student">Student</option>
                     <option value="instructor">Instructor/Professor</option>
                     <option value="manager">Manager</option>
                     <option value="hr_admin">HR Admin</option>
                     <option value="admin">Super Admin</option>
                 </select>
            </div>
            <div>
                <label asp-for="JobTitle" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Job Title</label>
                <input asp-for="JobTitle" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" placeholder="Software Engineer" />
            </div>
            <div>
                <label asp-for="DepartmentId" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Department</label>
                <select asp-for="DepartmentId" class ="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" asp-items="ViewBag.DepartmentId">
                    <option value="">-- Select Department --</option>
                </select>
            </div>
            <div>
                <label asp-for="Salary" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Salary (Annual)</label>
                <input asp-for="Salary" type="number" step="0.01" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" />
            </div>
             <div>
                <label asp-for="HireDate" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Hire Date</label>
                <input asp-for="HireDate" type="date" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" />
            </div>
        </div>

        <div class="flex justify-end pt-4">
            <button type="submit" class="bg-[#047857] hover:bg-emerald-700 text-white font-bold py-3 px-8 rounded-xl shadow-lg transition-transform active:scale-95">
                Create Employee
            </button>
        </div>
    </form>
</div>
