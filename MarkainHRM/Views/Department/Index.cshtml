@model IEnumerable<OzarkLMS.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-slate-800 dark:text-white">Departments</h1>
        <a asp-action="Create" class="bg-[#047857] hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded-lg transition-colors flex items-center">
            <i data-lucide="plus" class="w-5 h-5 mr-2"></i> Add Department
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model) {
            <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-100 dark:border-slate-700 p-6 flex flex-col justify-between">
                <div>
                    <div class="flex justify-between items-start mb-2">
                        <h2 class="text-xl font-bold text-slate-800 dark:text-white">@item.Name</h2>
                        <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full dark:bg-blue-900 dark:text-blue-200">
                             @item.Employees.Count Employees
                        </span>
                    </div>
                    <p class="text-slate-500 text-sm mb-4 line-clamp-2">@item.Description</p>
                    
                    <div class="flex items-center text-sm text-slate-600 dark:text-slate-300">
                        <i data-lucide="user" class="w-4 h-4 mr-2"></i>
                        Manager: <span class="font-medium ml-1">@(item.Manager?.Username ?? "Unassigned")</span>
                    </div>
                </div>

                <div class="mt-6 pt-4 border-t border-gray-100 dark:border-slate-700 flex justify-end space-x-3">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-500 hover:text-blue-700 font-medium text-sm">Edit</a>
                    
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure? This will not delete employees, but will unlink them.');">
                         <button type="submit" class="text-red-500 hover:text-red-700 font-medium text-sm">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
