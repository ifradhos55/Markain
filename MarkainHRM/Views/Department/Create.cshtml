@model OzarkLMS.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="max-w-md mx-auto px-4 py-8">
    <div class="mb-6">
         <a asp-action="Index" class="text-slate-500 hover:text-slate-700 flex items-center text-sm mb-2">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-1"></i> Back to Departments
        </a>
        <h1 class="text-3xl font-bold text-slate-800 dark:text-white">Create Department</h1>
    </div>

    <form asp-action="Create" class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-100 dark:border-slate-700 p-6 space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

        <div>
            <label asp-for="Name" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Department Name</label>
            <input asp-for="Name" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" placeholder="e.g. Engineering" />
            <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
        </div>

         <div>
            <label asp-for="Description" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Description</label>
            <textarea asp-for="Description" class="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none h-24"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
        </div>
        
        <div>
            <label asp-for="ManagerId" class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-1">Manager</label>
            <select asp-for="ManagerId" class ="w-full rounded-lg border-gray-300 dark:border-slate-600 px-4 py-2 bg-gray-50 dark:bg-slate-700 focus:ring-2 focus:ring-emerald-500 outline-none" asp-items="ViewBag.ManagerId">
                <option value="">-- Select Manager --</option>
            </select>
        </div>

        <button type="submit" class="w-full bg-[#047857] hover:bg-emerald-700 text-white font-bold py-3 px-8 rounded-xl shadow-lg transition-transform active:scale-95">
            Create Department
        </button>
    </form>
</div>
