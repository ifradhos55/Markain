@model OzarkLMS.Models.ChatGroup
@using System.Security.Claims

@{
    var currentUserId = int.Parse(User.FindFirstValue("UserId") ?? User.FindFirstValue(ClaimTypes.NameIdentifier) ?? "0");
    var isAdmin = User.IsInRole("admin");
    var isOwner = Model.OwnerId == currentUserId;
    var isDefault = Model.IsDefault;
    var canManage = isDefault ? isAdmin : (isOwner || isAdmin);
    var isMember = Model.Members.Any(m => m.UserId == currentUserId);
    var myMembership = Model.Members.FirstOrDefault(m => m.UserId == currentUserId);
    var viewMode = myMembership?.ViewMode ?? "List";
}

<style>
    /* Solid chat container */
    .chat-glass {
        background-color: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
    }
    .dark .chat-glass {
        background-color: rgba(15, 23, 42, 0.98);
    }
    
    /* Message bubble animations */
    .msg-bubble {
        animation: msg-in 0.2s ease-out;
    }
    @@keyframes msg-in {
        from { opacity: 0; transform: translateY(8px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    /* Sent message style */
    .msg-sent {
        background: #004B87;
    }
    
    /* Scrollbar */
    .chat-scroll::-webkit-scrollbar { width: 6px; }
    .chat-scroll::-webkit-scrollbar-track { background: transparent; }
    .chat-scroll::-webkit-scrollbar-thumb { background: rgba(148, 163, 184, 0.3); border-radius: 3px; }
    .chat-scroll::-webkit-scrollbar-thumb:hover { background: rgba(148, 163, 184, 0.5); }
</style>

<div class="flex h-[calc(100vh-64px)] bg-slate-50 dark:bg-slate-950 overflow-hidden">
    <!-- Chat Area -->
    <div class="flex-1 flex flex-col relative w-full">
        
        <!-- Header -->
        <div class="px-6 py-4 chat-glass border-b border-slate-200/50 dark:border-slate-700/50 flex items-center justify-between z-20">
            <div class="flex items-center">
                <a asp-action="Index" class="mr-4 p-2.5 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-xl text-slate-500 dark:text-slate-400 transition-all">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                </a>
                
                <!-- Group Photo -->
                <div class="w-12 h-12 rounded-xl mr-4 overflow-hidden bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-600 flex items-center justify-center relative group shadow-md">
                    @if(!string.IsNullOrEmpty(Model.GroupPhotoUrl))
                    {
                        <img src="@Model.GroupPhotoUrl" class="w-full h-full object-cover" />
                    }
                    else
                    {
                        <i data-lucide="@(isDefault ? "building" : "users")" class="w-5 h-5 text-slate-400 dark:text-slate-500"></i>
                    }
                    
                    @if(canManage)
                    {
                        <button onclick="document.getElementById('uploadPhotoInput').click()" class="absolute inset-0 bg-black/50 hidden group-hover:flex items-center justify-center text-white cursor-pointer transition-all">
                            <i data-lucide="camera" class="w-5 h-5"></i>
                        </button>
                        <form asp-action="UpdateGroupPhoto" method="post" enctype="multipart/form-data" class="hidden">
                            <input type="hidden" name="groupId" value="@Model.Id" />
                            <input type="file" name="photo" id="uploadPhotoInput" onchange="this.form.submit()" accept="image/*" />
                        </form>
                    }
                </div>
                
                <div>
                    <h1 class="font-bold text-lg text-slate-800 dark:text-slate-100 leading-tight flex items-center">
                        @Model.Name
                        @if(Model.IsDefault)
                        {
                            <span class="ml-2 bg-blue-600 text-white text-[10px] font-bold px-2.5 py-0.5 rounded-full uppercase shadow-sm">Official</span>
                        }
                    </h1>
                    <p class="text-xs text-slate-500 dark:text-slate-400 cursor-pointer hover:text-[#004B87] dark:hover:text-blue-400 truncate max-w-[200px] transition-colors" onclick="document.getElementById('membersModal').classList.remove('hidden')">
                        @Model.Members.Count members • @Model.Description
                    </p>
                </div>
            </div>
             
            <div class="flex items-center space-x-2">
                <!-- View Toggle -->
                <form asp-action="ToggleViewMode" method="post" class="flex bg-slate-100 dark:bg-slate-800 p-1 rounded-xl">
                    <input type="hidden" name="groupId" value="@Model.Id" />
                    <button type="submit" name="viewMode" value="List" class="p-2 rounded-lg @(viewMode == "List" ? "bg-white dark:bg-slate-700 shadow-sm text-[#004B87] dark:text-blue-400" : "text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200") transition-all">
                        <i data-lucide="list" class="w-4 h-4"></i>
                    </button>
                    <button type="submit" name="viewMode" value="Grid" class="p-2 rounded-lg @(viewMode == "Grid" ? "bg-white dark:bg-slate-700 shadow-sm text-[#004B87] dark:text-blue-400" : "text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200") transition-all">
                        <i data-lucide="grid-2x2" class="w-4 h-4"></i>
                    </button>
                </form>
                 
                <button class="p-2.5 text-slate-400 dark:text-slate-500 hover:text-slate-600 dark:hover:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-xl transition-all" onclick="document.getElementById('membersModal').classList.remove('hidden')">
                    <i data-lucide="users" class="w-5 h-5"></i>
                </button>
                 
                @if(canManage || (!isDefault && isMember))
                {
                    <div class="relative">
                        <button onclick="toggleMenu()" class="p-2.5 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-xl text-slate-500 dark:text-slate-400 transition-all">
                            <i data-lucide="more-vertical" class="w-5 h-5"></i>
                        </button>
                        <!-- Options Menu -->
                        <div id="optionsMenu" class="absolute right-0 top-full mt-2 w-56 bg-white dark:bg-slate-800 rounded-2xl shadow-2xl border border-slate-100 dark:border-slate-700 py-2 hidden z-50 animate-in fade-in slide-in-from-top-2 duration-150">
                            <div class="flex justify-between items-center px-4 py-2 border-b border-slate-100 dark:border-slate-700">
                                <span class="text-xs font-bold text-slate-400 dark:text-slate-500 uppercase tracking-wider">Options</span>
                                <button onclick="toggleMenu()" class="text-slate-400 hover:text-slate-600 dark:text-slate-500 dark:hover:text-slate-300">
                                    <i data-lucide="x" class="w-4 h-4"></i>
                                </button>
                            </div>
                            
                            @if(canManage)
                            {
                                <button onclick="document.getElementById('membersModal').classList.remove('hidden'); toggleMenu();" class="block w-full text-left px-4 py-3 text-sm text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors flex items-center gap-2">
                                    <i data-lucide="users-round" class="w-4 h-4 text-slate-400"></i>
                                    Manage Members
                                </button>
                                <form id="actionForm-deleteGroup" asp-action="DeleteGroup" method="post">
                                    <input type="hidden" name="groupId" value="@Model.Id" />
                                    <button type="button" onclick="showActionModal('deleteGroup', 'Delete Group', 'Are you sure you want to delete this group? This action cannot be undone.', 'Delete', 'danger')" class="block w-full text-left px-4 py-3 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 font-semibold flex items-center gap-2 transition-colors">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                        Delete Group
                                    </button>
                                </form>
                            }
                            
                            @if(!isDefault && isMember)
                            {
                                <form id="actionForm-leaveGroup" asp-action="LeaveGroup" method="post">
                                    <input type="hidden" name="groupId" value="@Model.Id" />
                                    <button type="button" onclick="showActionModal('leaveGroup', 'Leave Group', 'Are you sure you want to leave this group?', 'Leave', 'primary')" class="block w-full text-left px-4 py-3 text-sm text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 border-t border-slate-100 dark:border-slate-700 flex items-center gap-2 transition-colors">
                                        <i data-lucide="log-out" class="w-4 h-4 text-slate-400"></i>
                                        Leave Group
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Chat Content -->
        @if(viewMode == "Grid")
        {
            <!-- GRID VIEW (Media Gallery) -->
            <div class="flex-1 overflow-y-auto p-6 bg-slate-50/50 dark:bg-slate-900/50">
                <h3 class="font-bold text-slate-400 dark:text-slate-600 text-xs uppercase mb-5 tracking-wider flex items-center gap-2">
                    <i data-lucide="image" class="w-4 h-4"></i>
                    Media Gallery
                </h3>
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
                    @foreach(var msg in Model.Messages.OrderByDescending(m => m.SentDate).Where(m => !string.IsNullOrEmpty(m.AttachmentUrl)))
                    {
                        bool isImg = msg.AttachmentContentType?.StartsWith("image/") ?? (msg.AttachmentUrl != null && (msg.AttachmentUrl.EndsWith(".jpg") || msg.AttachmentUrl.EndsWith(".png") || msg.AttachmentUrl.EndsWith(".gif")));
                        <div class="aspect-square bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-200/50 dark:border-slate-700/50 overflow-hidden relative group cursor-pointer hover:shadow-lg hover:scale-[1.02] transition-all">
                            @if(isImg)
                            {
                                <img src="@msg.AttachmentUrl" class="w-full h-full object-cover" onclick="openLightbox('@msg.AttachmentUrl')" />
                            }
                            else
                            {
                                <a href="@msg.AttachmentUrl" target="_blank" class="flex flex-col items-center justify-center h-full w-full bg-slate-50 dark:bg-slate-700/50 text-slate-500 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700">
                                    <i data-lucide="file" class="w-8 h-8 mb-2"></i>
                                    <span class="text-xs truncate max-w-[80%]">Attachment</span>
                                </a>
                            }
                            <div class="absolute inset-x-0 bottom-0 bg-black/60 p-3 opacity-0 group-hover:opacity-100 transition-opacity">
                                <p class="text-white text-xs truncate font-medium">@msg.Sender.Username</p>
                            </div>
                        </div>
                    }
                    @if(!Model.Messages.Any(m => !string.IsNullOrEmpty(m.AttachmentUrl)))
                    {
                        <div class="col-span-full text-center py-16">
                            <div class="w-16 h-16 rounded-2xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="image-off" class="w-8 h-8 text-slate-400"></i>
                            </div>
                            <p class="text-slate-500 dark:text-slate-400">No media shared yet</p>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <!-- LIST VIEW (Standard Chat) -->
            <div class="flex-1 overflow-y-auto p-6 space-y-4 bg-slate-50/50 dark:bg-slate-950 chat-scroll" id="chatContainer">
                @if(!Model.Messages.Any())
                {
                    <div class="flex flex-col items-center justify-center h-full text-center pb-20">
                        <div class="w-24 h-24 bg-blue-50 dark:bg-slate-800 text-blue-500 dark:text-blue-400 rounded-3xl flex items-center justify-center mb-6 shadow-inner">
                            <i data-lucide="message-square-heart" class="w-12 h-12"></i>
                        </div>
                        <h3 class="text-slate-800 dark:text-slate-200 font-bold text-xl mb-2">No messages yet</h3>
                        <p class="text-slate-400 dark:text-slate-500 max-w-xs">Be the first to start the conversation!</p>
                    </div>
                }
                
                @foreach(var msg in Model.Messages.OrderBy(m => m.SentDate))
                {
                    bool isMe = msg.SenderId == currentUserId;
                    bool hasAttachment = !string.IsNullOrEmpty(msg.AttachmentUrl);
                    bool isImg = hasAttachment && (msg.AttachmentContentType?.StartsWith("image/") ?? (msg.AttachmentUrl.EndsWith(".jpg") || msg.AttachmentUrl.EndsWith(".png") || msg.AttachmentUrl.EndsWith(".jpeg") || msg.AttachmentUrl.EndsWith(".gif")));
                    bool isDeleted = msg.IsDeleted;

                    <div class="flex w-full @(isMe ? "justify-end" : "justify-start") group/msg msg-bubble">
                        <!-- Avatar (Received only) -->
                        @if(!isMe)
                        {
                            <a asp-controller="Account" asp-action="Profile" asp-route-userId="@msg.SenderId" class="mr-3 flex-shrink-0 self-end mb-1 cursor-pointer group/avatar">
                                @if(!string.IsNullOrEmpty(msg.Sender.ProfilePictureUrl))
                                {
                                    <img src="@msg.Sender.ProfilePictureUrl" class="w-9 h-9 rounded-xl object-cover shadow-sm bg-slate-200 dark:bg-slate-700 ring-2 ring-white dark:ring-slate-800 group-hover/avatar:ring-[#004B87] transition-all" />
                                }
                                else
                                {
                                    <div class="w-9 h-9 rounded-xl bg-blue-500 text-white flex items-center justify-center text-xs font-bold shadow-sm">
                                        @((msg.Sender?.Username ?? "?").Substring(0,1).ToUpper())
                                    </div>
                                }
                            </a>
                        }

                        <div class="flex flex-col max-w-[75%] md:max-w-[60%] @(isMe ? "items-end" : "items-start")">
                            
                            @if(!isMe)
                            {
                                <a asp-controller="Account" asp-action="Profile" asp-route-userId="@msg.SenderId" class="text-[10px] text-slate-500 dark:text-slate-400 ml-1 mb-1 font-medium hover:text-[#004B87] dark:hover:text-blue-400 transition-colors">@(msg.Sender?.Username ?? "Unknown")</a>
                            }
                            
                            <!-- Message Content -->
                            <div class="relative shadow-sm group/bubble @(isDeleted ? "bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-400 italic" : (isMe ? "msg-sent text-white" : "bg-white dark:bg-slate-800 text-slate-800 dark:text-slate-200 border border-slate-100 dark:border-slate-700")) rounded-2xl @(isMe ? "rounded-tr-md" : "rounded-tl-md")">
                                
                                @if(isDeleted)
                                {
                                    <div class="px-4 py-3 text-sm flex items-center">
                                        <i data-lucide="trash-2" class="w-3.5 h-3.5 mr-2 opacity-50"></i> This message was deleted.
                                    </div>
                                }
                                else
                                {
                                    <!-- Options Trigger (Hover) -->
                                    @if(isMe || isAdmin)
                                    {
                                        <div class="absolute top-2 right-2 opacity-0 group-hover/bubble:opacity-100 transition-opacity bg-black/20 rounded-full p-1 z-10 cursor-pointer backdrop-blur-sm" onclick="toggleMessageOptions(@msg.Id)">
                                            <i data-lucide="chevron-down" class="w-3.5 h-3.5 text-white/90"></i>
                                        </div>
                                        
                                        <!-- Options Dropdown -->
                                        <div id="msgOptions-@msg.Id" class="hidden absolute top-8 right-2 bg-white dark:bg-slate-800 shadow-xl rounded-xl border border-slate-100 dark:border-slate-700 py-1 z-50 w-36 text-slate-800 dark:text-slate-200 animate-in fade-in slide-in-from-top-2 duration-150">
                                            @if(isMe)
                                            {
                                                <button onclick="enableEditMode(@msg.Id, `@msg.Message`)" class="w-full text-left px-4 py-2.5 text-sm hover:bg-slate-50 dark:hover:bg-slate-700 flex items-center transition-colors">
                                                    <i data-lucide="edit-2" class="w-4 h-4 mr-2 text-slate-400"></i> Edit
                                                </button>
                                            }
                                            <form id="deleteForm-@msg.Id" asp-action="DeleteMessage" method="post">
                                                <input type="hidden" name="messageId" value="@msg.Id" />
                                                <button type="button" onclick="showDeleteModal(@msg.Id)" class="w-full text-left px-4 py-2.5 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 flex items-center transition-colors">
                                                    <i data-lucide="trash" class="w-4 h-4 mr-2"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    }

                                    <!-- File/Image -->
                                    @if(hasAttachment)
                                    {
                                        <div class="@(isImg ? "" : "p-3 border-b " + (isMe?"border-white/10":"border-slate-100 dark:border-slate-700"))">
                                            @if(isImg)
                                            {
                                                <div class="max-w-[300px] max-h-[300px] overflow-hidden rounded-xl">
                                                    <img src="@msg.AttachmentUrl" class="w-full h-full object-cover cursor-pointer hover:opacity-95 transition-opacity" onclick="openLightbox('@msg.AttachmentUrl')" />
                                                </div>
                                            }
                                            else
                                            {
                                                <!-- Rich File Card -->
                                                <div class="flex items-center gap-3">
                                                    <div class="w-11 h-11 rounded-xl @(isMe ? "bg-white/20" : "bg-slate-100 dark:bg-slate-700") flex items-center justify-center flex-shrink-0">
                                                        @if(msg.AttachmentContentType?.Contains("pdf") == true) { <i data-lucide="file-text" class="w-5 h-5"></i> }
                                                        else if(msg.AttachmentContentType?.Contains("word") == true) { <i data-lucide="file-type" class="w-5 h-5"></i> }
                                                        else { <i data-lucide="file" class="w-5 h-5"></i> }
                                                    </div>
                                                    <div class="min-w-0">
                                                        <p class="text-sm font-medium truncate max-w-[150px]" title="@msg.AttachmentOriginalName">@(msg.AttachmentOriginalName ?? "Attachment")</p>
                                                        <div class="flex items-center text-[10px] opacity-70">
                                                            <span>@((msg.AttachmentSize / 1024.0).ToString("0.0")) KB</span>
                                                            <span class="mx-1">•</span>
                                                            <a href="@msg.AttachmentUrl" target="_blank" class="underline hover:decoration-2">Download</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    
                                    <!-- Text -->
                                    @if(!string.IsNullOrEmpty(msg.Message))
                                    {
                                        <div class="px-4 py-3" id="msgContent-@msg.Id">
                                            @if(msg.Message.StartsWith("[POST_SHARE]|"))
                                            {
                                                var parts = msg.Message.Split('|');
                                                if(parts.Length >= 5)
                                                {
                                                    var poster = parts[1];
                                                    var pId = parts[2];
                                                    var content = parts[3];
                                                    var link = parts[4];
                                                    
                                                    <div class="bg-white/10 dark:bg-slate-900/40 rounded-xl p-4 border border-white/20 dark:border-slate-700/50 shadow-inner">
                                                        <div class="flex items-center gap-2 mb-2">
                                                            <div class="w-6 h-6 rounded-md bg-[#004B87] dark:bg-blue-600 flex items-center justify-center">
                                                                <i data-lucide="share-2" class="w-3.5 h-3.5 text-white"></i>
                                                            </div>
                                                            <span class="text-[10px] font-black uppercase tracking-widest text-[#004B87] dark:text-blue-400">Post Shared</span>
                                                        </div>
                                                        <p class="text-[11px] font-bold text-slate-500 dark:text-slate-400 mb-1">@@@poster</p>
                                                        <p class="text-sm line-clamp-2 text-slate-800 dark:text-slate-200 mb-3 leading-relaxed">@content</p>
                                                        <a href="@link" class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-[#004B87] dark:bg-blue-600 text-white text-[10px] font-bold uppercase tracking-wider hover:opacity-90 transition-all shadow-md">
                                                            View Post
                                                            <i data-lucide="external-link" class="w-3 h-3"></i>
                                                        </a>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <p class="text-sm leading-relaxed whitespace-pre-wrap break-words">@msg.Message</p>
                                            }
                                        </div>
                                        <!-- Edit Form (Hidden) -->
                                        <form asp-action="EditMessage" method="post" id="editForm-@msg.Id" class="hidden px-3 py-3">
                                            <input type="hidden" name="messageId" value="@msg.Id" />
                                            <textarea name="newContent" class="w-full text-sm text-slate-800 dark:text-slate-200 rounded-xl p-3 bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700" rows="2">@msg.Message</textarea>
                                            <div class="flex justify-end gap-2 mt-2">
                                                <button type="button" onclick="cancelEdit(@msg.Id)" class="text-xs text-white/80 hover:text-white font-medium">Cancel</button>
                                                <button type="submit" class="text-xs bg-white text-[#004B87] px-3 py-1.5 rounded-lg font-bold shadow-sm">Save</button>
                                            </div>
                                        </form>
                                    }
                                    
                                    <!-- Timestamp -->
                                    <div class="px-4 pb-2 text-[10px] w-full text-right @(isMe ? "text-blue-200" : "text-slate-400 dark:text-slate-500") flex items-center justify-end gap-1">
                                        @if(msg.LastEditedDate.HasValue)
                                        {
                                            <span class="italic">edited</span>
                                        }
                                        @msg.SentDate.ToLocalTime().ToShortTimeString()
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Input Area -->
        <div class="p-4 chat-glass border-t border-slate-200/50 dark:border-slate-700/50 mt-auto z-10">
            @if(isMember || isAdmin)
            {
                <form asp-action="PostMessage" method="post" enctype="multipart/form-data" class="flex flex-col gap-3">
                    <input type="hidden" name="groupId" value="@Model.Id" />
                    
                    <!-- File Preview -->
                    <div id="filePreview" class="hidden px-4 py-3 bg-blue-50/50 dark:bg-blue-900/10 rounded-xl border border-blue-200 dark:border-blue-800 flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <div class="w-8 h-8 rounded-lg bg-blue-100 dark:bg-blue-800 flex items-center justify-center">
                                <i data-lucide="file" class="w-4 h-4 text-blue-600 dark:text-blue-300"></i>
                            </div>
                            <span class="text-sm text-blue-700 dark:text-blue-300 font-medium" id="fileName">Selected File</span>
                        </div>
                        <button type="button" onclick="clearFile()" class="text-slate-400 hover:text-red-500 dark:text-slate-500 dark:hover:text-red-400 transition-colors">
                            <i data-lucide="x" class="w-5 h-5"></i>
                        </button>
                    </div>

                    <div class="flex items-end gap-3">
                        <!-- Attach Button -->
                        <button type="button" onclick="document.getElementById('msgFileInput').click()" class="p-3 text-slate-400 hover:text-[#004B87] hover:bg-blue-50 dark:text-slate-500 dark:hover:text-blue-400 dark:hover:bg-slate-800 rounded-xl transition-all flex-shrink-0" title="Attach Media">
                            <i data-lucide="paperclip" class="w-5 h-5"></i>
                        </button>
                        <input type="file" name="file" id="msgFileInput" class="hidden" onchange="showFilePreview(this)" />
                        
                        <!-- Text Input -->
                        <div class="flex-1 bg-slate-100 dark:bg-slate-800 rounded-2xl focus-within:ring-2 focus-within:ring-[#004B87] dark:focus-within:ring-blue-500 focus-within:bg-white dark:focus-within:bg-slate-900 transition-all flex items-center px-4 py-1 border border-transparent focus-within:border-slate-200 dark:focus-within:border-slate-700">
                            <textarea name="message" rows="1" class="w-full bg-transparent border-0 focus:ring-0 py-3 text-sm text-slate-700 dark:text-slate-200 placeholder-slate-500 dark:placeholder-slate-400 resize-none max-h-32 outline-none" placeholder="Message @Model.Name..." oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'"></textarea>
                        </div>
                        
                        <!-- Send Button -->
                        <button type="submit" class="p-3.5 bg-[#004B87] hover:bg-[#003d6d] text-white rounded-xl hover:shadow-lg transition-all flex-shrink-0">
                            <i data-lucide="send" class="w-5 h-5"></i>
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="text-center p-4 bg-slate-100 dark:bg-slate-800 rounded-xl text-slate-500 dark:text-slate-400 text-sm">
                    You are viewing this chat as Admin.
                </div>
            }
        </div>
    </div>
</div>

<!-- Image Lightbox -->
<div id="lightbox" class="fixed inset-0 z-[100] bg-black/95 hidden flex items-center justify-center p-4 backdrop-blur-sm">
    <div class="relative w-full h-full flex items-center justify-center">
        <img id="lightboxImg" src="" class="max-w-full max-h-full rounded-2xl shadow-2xl object-contain" />
        <button onclick="closeLightbox()" class="absolute top-6 right-6 text-white hover:text-slate-300 bg-white/10 hover:bg-white/20 p-3 rounded-xl transition-all backdrop-blur-sm">
            <i data-lucide="x" class="w-8 h-8"></i>
        </button>
    </div>
</div>

<!-- Members Modal -->
<div id="membersModal" class="fixed inset-0 bg-black/60 z-50 hidden flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl w-full max-w-md mx-4 overflow-hidden flex flex-col max-h-[80vh] border border-slate-100 dark:border-slate-700 animate-in fade-in zoom-in-95 duration-200">
        <div class="px-6 py-5 border-b border-slate-200 dark:border-slate-700 flex justify-between items-center bg-slate-50 dark:bg-slate-800/80">
            <h3 class="font-bold text-lg text-slate-800 dark:text-slate-100 flex items-center gap-2">
                <span class="w-8 h-8 rounded-lg bg-[#004B87] flex items-center justify-center">
                    <i data-lucide="users" class="w-4 h-4 text-white"></i>
                </span>
                Members (@Model.Members.Count)
            </h3>
            <button onclick="document.getElementById('membersModal').classList.add('hidden')" class="text-slate-400 hover:text-slate-700 dark:hover:text-slate-300 p-1 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-all">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>
        </div>
        
        <div class="p-4 border-b border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 relative">
            @if(canManage)
            {
                <form asp-action="AddMember" method="post" class="flex gap-2 relative">
                    <input type="hidden" name="groupId" value="@Model.Id" />
                    <div class="relative flex-1">
                        <input id="userSearchInput" name="username" class="w-full rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-slate-800 dark:text-slate-100 text-sm px-4 py-2.5 outline-none focus:ring-2 focus:ring-[#004B87] dark:focus:ring-blue-500 transition-all" placeholder="Search users to add..." autocomplete="off" required oninput="searchUsers(this.value)" />
                        <div id="searchResults" class="hidden absolute top-full left-0 right-0 mt-2 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl shadow-xl z-50 max-h-48 overflow-y-auto"></div>
                    </div>
                    
                    <button type="submit" class="bg-[#004B87] hover:bg-[#003d6d] text-white px-4 py-2.5 rounded-xl font-semibold text-sm hover:shadow-lg transition-all">Add</button>
                </form>
            }
        </div>
        
        <div class="overflow-y-auto p-4 space-y-1 flex-1 chat-scroll">
            @foreach(var member in Model.Members.OrderByDescending(m => m.UserId == Model.OwnerId))
            {
                <div class="flex items-center justify-between p-3 hover:bg-slate-50 dark:hover:bg-slate-700/50 rounded-xl transition-all">
                    <div class="flex items-center">
                        @if(member.User != null && !string.IsNullOrEmpty(member.User.ProfilePictureUrl))
                        {
                            <img src="@member.User.ProfilePictureUrl" class="w-10 h-10 rounded-xl object-cover mr-3 shadow-sm ring-2 ring-white dark:ring-slate-800" />
                        }
                        else
                        {
                            <div class="w-10 h-10 rounded-xl bg-blue-500 flex items-center justify-center text-white font-bold mr-3 text-sm shadow-sm">
                                @((member.User?.Username?.Length > 0) ? member.User.Username.Substring(0,1).ToUpper() : "?")
                            </div>
                        }
                        <div>
                            <p class="font-semibold text-sm text-slate-800 dark:text-slate-200 flex items-center">
                                @(member.User?.Username ?? "Unknown")
                                @if(member.UserId == Model.OwnerId)
                                {
                                    <span class="ml-2 text-[10px] bg-amber-400 text-white px-2 py-0.5 rounded-full uppercase font-bold shadow-sm">Owner</span>
                                }
                            </p>
                            <p class="text-[10px] text-slate-400 dark:text-slate-500">Joined @member.JoinedDate.ToShortDateString()</p>
                        </div>
                    </div>
                    
                    @if(canManage && member.UserId != Model.OwnerId)
                    {
                        <form id="actionForm-removeMember-@member.UserId" asp-action="RemoveMember" method="post">
                            <input type="hidden" name="groupId" value="@Model.Id" />
                            <input type="hidden" name="memberId" value="@member.UserId" />
                            <button type="button" onclick="showActionModal('removeMember-@member.UserId', 'Remove Member', 'Are you sure you want to remove @(member.User?.Username ?? "this member") from the group?', 'Remove', 'danger')" class="text-slate-400 hover:text-red-600 dark:text-slate-500 dark:hover:text-red-400 p-2 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-all">
                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                            </button>
                        </form>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Action Confirmation Modal (Generic) -->
<div id="actionModal" class="hidden fixed inset-0 z-[100] bg-black/50 backdrop-blur-sm flex items-center justify-center p-4">
    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl w-full max-w-sm p-6 animate-in zoom-in-95 duration-150">
        <div id="actionModalIconContent" class="flex items-center justify-center w-14 h-14 bg-red-100 dark:bg-red-900/30 rounded-full mx-auto mb-4">
            <i data-lucide="alert-triangle" class="w-7 h-7 text-red-600 dark:text-red-400"></i>
        </div>
        <h3 id="actionModalTitle" class="text-lg font-bold text-slate-800 dark:text-slate-100 text-center mb-2">Confirm Action</h3>
        <p id="actionModalMessage" class="text-sm text-slate-500 dark:text-slate-400 text-center mb-6">Are you sure you want to proceed?</p>
        <div class="flex gap-3">
            <button onclick="hideActionModal()" class="flex-1 px-4 py-2.5 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-xl font-medium hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors">Cancel</button>
            <button id="confirmActionBtn" class="flex-1 px-4 py-2.5 bg-red-600 text-white rounded-xl font-medium hover:bg-red-700 transition-colors">Proceed</button>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="hidden fixed inset-0 z-[100] bg-black/50 backdrop-blur-sm flex items-center justify-center p-4">
    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl w-full max-w-sm p-6 animate-in zoom-in-95 duration-150">
        <div class="flex items-center justify-center w-14 h-14 bg-red-100 dark:bg-red-900/30 rounded-full mx-auto mb-4">
            <i data-lucide="trash-2" class="w-7 h-7 text-red-600 dark:text-red-400"></i>
        </div>
        <h3 class="text-lg font-bold text-slate-800 dark:text-slate-100 text-center mb-2">Delete Message</h3>
        <p class="text-sm text-slate-500 dark:text-slate-400 text-center mb-6">Are you sure you want to delete this message? This action cannot be undone.</p>
        <div class="flex gap-3">
            <button onclick="hideDeleteModal()" class="flex-1 px-4 py-2.5 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-xl font-medium hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors">Cancel</button>
            <button id="confirmDeleteBtn" onclick="confirmDelete()" class="flex-1 px-4 py-2.5 bg-red-600 text-white rounded-xl font-medium hover:bg-red-700 transition-colors">Delete</button>
        </div>
    </div>
</div>

<script>
    // Scroll to bottom
    var chatContainer = document.getElementById("chatContainer");
    if(chatContainer) {
        chatContainer.scrollTop = chatContainer.scrollHeight;
    }

    // Toggle Options Menu
    function toggleMenu() {
        var menu = document.getElementById('optionsMenu');
        menu.classList.toggle('hidden');
    }

    // Delete Modal Functions
    let pendingDeleteMsgId = null;
    function showDeleteModal(msgId) {
        pendingDeleteMsgId = msgId;
        document.getElementById('deleteModal').classList.remove('hidden');
        document.querySelectorAll('[id^=msgOptions-]').forEach(el => el.classList.add('hidden'));
        if (typeof lucide !== 'undefined') lucide.createIcons();
    }
    function hideDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
        pendingDeleteMsgId = null;
    }
    function confirmDelete() {
        if (pendingDeleteMsgId) {
            document.getElementById(`deleteForm-${pendingDeleteMsgId}`).submit();
        }
    }

    // Action Modal Functions
    let currentActionFormId = null;
    function showActionModal(formId, title, message, btnText, type) {
        currentActionFormId = formId;
        document.getElementById('actionModalTitle').textContent = title;
        document.getElementById('actionModalMessage').textContent = message;
        
        const btn = document.getElementById('confirmActionBtn');
        btn.textContent = btnText;
        
        const iconContainer = document.getElementById('actionModalIconContent');
        
        if (type === 'danger') {
            btn.className = 'flex-1 px-4 py-2.5 bg-red-600 text-white rounded-xl font-medium hover:bg-red-700 transition-colors';
            iconContainer.className = 'flex items-center justify-center w-14 h-14 bg-red-100 dark:bg-red-900/30 rounded-full mx-auto mb-4';
            iconContainer.innerHTML = '<i data-lucide="alert-triangle" class="w-7 h-7 text-red-600 dark:text-red-400"></i>';
        } else {
            btn.className = 'flex-1 px-4 py-2.5 bg-[#004B87] dark:bg-blue-600 text-white rounded-xl font-medium hover:bg-[#003d6d] dark:hover:bg-blue-700 transition-colors';
            iconContainer.className = 'flex items-center justify-center w-14 h-14 bg-blue-100 dark:bg-blue-900/30 rounded-full mx-auto mb-4';
            iconContainer.innerHTML = '<i data-lucide="info" class="w-7 h-7 text-[#004B87] dark:text-blue-400"></i>';
        }

        document.getElementById('actionModal').classList.remove('hidden');
        if (typeof lucide !== 'undefined') lucide.createIcons();
        
        btn.onclick = function() {
            document.getElementById(`actionForm-${currentActionFormId}`).submit();
        };
    }

    function hideActionModal() {
        document.getElementById('actionModal').classList.add('hidden');
        currentActionFormId = null;
    }

    // File Preview
    function showFilePreview(input) {
        if(input.files && input.files[0]) {
            document.getElementById('filePreview').classList.remove('hidden');
            document.getElementById('fileName').textContent = input.files[0].name;
        }
    }
    
    function clearFile() {
        document.getElementById('msgFileInput').value = '';
        document.getElementById('filePreview').classList.add('hidden');
    }

    // Lightbox
    function openLightbox(url) {
        document.getElementById('lightboxImg').src = url;
        document.getElementById('lightbox').classList.remove('hidden');
    }
    
    function closeLightbox() {
        document.getElementById('lightbox').classList.add('hidden');
    }

    // Live User Search
    let searchTimeout;
    function searchUsers(query) {
        clearTimeout(searchTimeout);
        const resultsContainer = document.getElementById('searchResults');
        
        if (!query || query.length < 2) {
            resultsContainer.classList.add('hidden');
            return;
        }

        searchTimeout = setTimeout(() => {
            fetch(`/Collaboration/SearchUsers?query=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(users => {
                    resultsContainer.innerHTML = '';
                    if (users.length > 0) {
                        users.forEach(user => {
                            const div = document.createElement('div');
                            div.className = "flex items-center p-3 hover:bg-slate-50 dark:hover:bg-slate-700 cursor-pointer border-b border-slate-100 dark:border-slate-700 last:border-0 transition-colors";
                            div.onclick = () => {
                                document.getElementById('userSearchInput').value = user.username;
                                resultsContainer.classList.add('hidden');
                            };
                            
                            const avatar = user.profilePictureUrl 
                                ? `<img src="${user.profilePictureUrl}" class="w-9 h-9 rounded-xl object-cover mr-3 shadow-sm">` 
                                : `<div class="w-9 h-9 rounded-xl bg-blue-500 text-white flex items-center justify-center text-xs font-bold mr-3">${user.username[0].toUpperCase()}</div>`;
                                
                            div.innerHTML = `
                                ${avatar}
                                <div>
                                    <p class="text-sm font-semibold text-slate-800 dark:text-slate-200">${user.username}</p>
                                </div>
                            `;
                            resultsContainer.appendChild(div);
                        });
                        resultsContainer.classList.remove('hidden');
                    } else {
                        resultsContainer.classList.add('hidden');
                    }
                });
        }, 300);
    }
    
    // Message Editing Logic
    function toggleMessageOptions(msgId) {
        const menu = document.getElementById(`msgOptions-${msgId}`);
        document.querySelectorAll('[id^=msgOptions-]').forEach(el => {
            if(el.id !== `msgOptions-${msgId}`) el.classList.add('hidden');
        });
        menu.classList.toggle('hidden');
    }
    
    function enableEditMode(msgId, currentContent) {
        document.getElementById(`msgContent-${msgId}`).classList.add('hidden');
        document.getElementById(`editForm-${msgId}`).classList.remove('hidden');
        document.getElementById(`msgOptions-${msgId}`).classList.add('hidden');
    }
    
    function cancelEdit(msgId) {
        document.getElementById(`msgContent-${msgId}`).classList.remove('hidden');
        document.getElementById(`editForm-${msgId}`).classList.add('hidden');
    }
    
    // Close dropdowns on click outside
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.group\\/bubble')) {
            document.querySelectorAll('[id^=msgOptions-]').forEach(el => el.classList.add('hidden'));
        }
    });
</script>
