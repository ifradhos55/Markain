@model OzarkLMS.Models.Assignment

@{
    ViewData["Title"] = "Submissions for " + Model.Title;
}

<div class="p-8 max-w-[1200px] mx-auto">
    <div class="mb-6 flex justify-between items-center">
        <div>
            <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId" asp-route-tab="assignments" class="text-sm font-medium text-slate-500 dark:text-slate-400 hover:text-[#004B87] dark:hover:text-blue-400 transition-colors flex items-center mb-2">
                 <i data-lucide="arrow-left" class="w-4 h-4 mr-1"></i> Back to Course
            </a>
            <h1 class="text-2xl font-bold text-[#004B87] dark:text-blue-400">Submissions: @Model.Title</h1>
        </div>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-200 dark:border-slate-700 overflow-hidden">
        <table class="w-full text-left text-sm text-slate-600 dark:text-slate-300">
            <thead class="bg-gray-50 dark:bg-slate-800 border-b border-gray-200 dark:border-slate-700 text-slate-500 dark:text-slate-400 font-bold uppercase">
                <tr>
                    <th class="px-6 py-4">Student</th>
                    <th class="px-6 py-4">Submitted At</th>
                    <th class="px-6 py-4">Content</th>
                    <th class="px-6 py-4">Score</th>
                    <th class="px-6 py-4">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-slate-700 bg-white dark:bg-slate-900">
                @foreach (var submission in ViewBag.Submissions as List<OzarkLMS.Models.Submission>)
                {
                    <tr class="hover:bg-blue-50/30 dark:hover:bg-slate-800/50 transition-colors">
                        <td class="px-6 py-4 font-bold text-slate-700 dark:text-slate-200">@submission.Student?.Username</td>
                        <td class="px-6 py-4 text-slate-500 dark:text-slate-400">@submission.SubmittedAt.ToLocalTime()</td>
                        <td class="px-6 py-4">
                            @if(submission.Attachments != null && submission.Attachments.Any())
                            {
                                <div class="space-y-1">
                                    @foreach(var attachment in submission.Attachments)
                                    {
                                        <a href="@attachment.FilePath" target="_blank" class="text-[#004B87] dark:text-blue-400 hover:underline flex items-center text-xs">
                                            <i data-lucide="file" class="w-3 h-3 mr-1"></i> @attachment.FileName
                                        </a>
                                    }
                                </div>
                            }
                            else if(!string.IsNullOrEmpty(submission.AttachmentUrl))
                            {
                                <a href="@submission.AttachmentUrl" target="_blank" class="text-[#004B87] dark:text-blue-400 hover:underline flex items-center"><i data-lucide="file" class="w-4 h-4 mr-1"></i> View File</a>
                            }
                            
                            @if (!string.IsNullOrEmpty(submission.Content))
                            {
                                <div class="mt-1 text-xs text-slate-500 dark:text-slate-400 max-w-xs truncate">
                                    @Html.Raw(submission.Content)
                                </div>
                            }
                        </td>
                        <td class="px-6 py-4">
                            @if(submission.Score.HasValue)
                            {
                                <span class="bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 px-2 py-1 rounded font-bold">@submission.Score</span>
                            }
                            else
                            {
                                <span class="text-slate-400 dark:text-slate-600">-</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            <button onclick="openGradingModal(@submission.Id, '@submission.Score', '@submission.Feedback')" class="text-[#004B87] dark:text-blue-400 font-bold hover:underline">Grade</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        @if((ViewBag.Submissions as List<OzarkLMS.Models.Submission>).Count == 0)
        {
            <div class="p-12 text-center text-slate-400 dark:text-slate-500">
                No submissions yet.
            </div>
        }
    </div>
</div>

<!-- Simple Grading Modal -->
<div id="gradingModal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-2xl w-[500px] p-6 border border-gray-200 dark:border-slate-700">
        <h2 class="text-xl font-bold text-[#004B87] dark:text-blue-400 mb-4">Grade Submission</h2>
        <form asp-action="GradeSubmission" method="post">
            <input type="hidden" name="submissionId" id="modalSubmissionId" />
            <div class="mb-4">
                <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Score</label>
                <input type="number" name="score" id="modalScore" class="w-full rounded-lg border-gray-300 dark:border-slate-600 dark:bg-slate-900 dark:text-white focus:ring-blue-500 focus:border-blue-500" required />
            </div>
            <div class="mb-6">
                 <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Feedback</label>
                 <textarea name="feedback" id="modalFeedback" class="w-full rounded-lg border-gray-300 dark:border-slate-600 dark:bg-slate-900 dark:text-white focus:ring-blue-500 focus:border-blue-500" rows="3"></textarea>
            </div>
            <div class="flex justify-end gap-3">
                <button type="button" onclick="document.getElementById('gradingModal').classList.add('hidden')" class="px-4 py-2 text-slate-500 dark:text-slate-400 font-bold hover:bg-gray-100 dark:hover:bg-slate-700 rounded-lg">Cancel</button>
                <button type="submit" class="bg-[#004B87] dark:bg-blue-600 text-white px-4 py-2 rounded-lg font-bold hover:bg-[#003d6e] dark:hover:bg-blue-700 transition-colors">Save Grade</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openGradingModal(id, score, feedback) {
        document.getElementById('modalSubmissionId').value = id;
        document.getElementById('modalScore').value = score || '';
        document.getElementById('modalFeedback').value = feedback || '';
        document.getElementById('gradingModal').classList.remove('hidden');
    }
</script>
