@model OzarkLMS.Models.JobPosting

@{
    ViewData["Title"] = Model.Title + " - Careers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-6xl mx-auto p-8 lg:p-12">
    <a asp-action="Index" class="inline-flex items-center text-sm font-bold text-slate-500 hover:text-[#004B87] dark:hover:text-blue-400 transition-colors mb-8">
        <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i> Back to Careers
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Job Info -->
        <div class="lg:col-span-2 space-y-10">
            <div>
                <div class="flex flex-wrap items-center gap-3 mb-6">
                    <span class="px-3 py-1 rounded-full text-xs font-bold bg-[#004B87]/10 text-[#004B87] dark:bg-blue-900/30 dark:text-blue-400 uppercase">
                        @Model.Department?.Name
                    </span>
                    <span class="flex items-center text-xs font-bold text-slate-400 uppercase tracking-wider">
                        <i data-lucide="calendar" class="w-3.5 h-3.5 mr-1.5"></i> Posted @Model.PostedDate.ToString("MMM dd, yyyy")
                    </span>
                </div>
                
                <h1 class="text-4xl md:text-5xl font-extrabold text-slate-900 dark:text-white mb-6 leading-tight">@Model.Title</h1>
                
                <div class="flex flex-wrap gap-6 text-slate-600 dark:text-slate-400 font-medium">
                    <div class="flex items-center bg-white dark:bg-slate-900 px-4 py-2 rounded-xl shadow-sm border border-gray-100 dark:border-slate-800">
                        <i data-lucide="map-pin" class="w-5 h-5 mr-3 text-red-500"></i> @Model.Location
                    </div>
                    <div class="flex items-center bg-white dark:bg-slate-900 px-4 py-2 rounded-xl shadow-sm border border-gray-100 dark:border-slate-800">
                        <i data-lucide="clock" class="w-5 h-5 mr-3 text-blue-500"></i> @Model.EmploymentType
                    </div>
                </div>
            </div>

            <div class="prose prose-slate dark:prose-invert max-w-none bg-white dark:bg-slate-900 p-8 rounded-3xl shadow-sm border border-gray-100 dark:border-slate-800">
                <h3 class="text-xl font-bold mb-4">Description</h3>
                <div class="text-slate-600 dark:text-slate-300 whitespace-pre-line leading-relaxed">
                    @Model.Description
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Requirements))
                {
                    <h3 class="text-xl font-bold mt-10 mb-4">Requirements</h3>
                    <div class="text-slate-600 dark:text-slate-300 whitespace-pre-line leading-relaxed">
                        @Model.Requirements
                    </div>
                }
            </div>

            @if (User.IsInRole("admin"))
            {
                <!-- Admin Only: Applicants List -->
                <div class="bg-white dark:bg-slate-900 rounded-3xl shadow-sm border border-emerald-100 dark:border-emerald-900/30 overflow-hidden">
                    <div class="p-6 bg-emerald-50 dark:bg-emerald-900/20 border-b border-emerald-100 dark:border-emerald-900/30 flex justify-between items-center">
                        <h3 class="text-xl font-bold text-emerald-800 dark:text-emerald-400 flex items-center">
                            <i data-lucide="users" class="w-5 h-5 mr-3"></i> Applicants (@Model.Applications.Count)
                        </h3>
                    </div>
                    <div class="divide-y divide-gray-50 dark:divide-slate-800">
                        @if (!Model.Applications.Any())
                        {
                            <div class="p-8 text-center text-slate-400 text-sm">No applications yet.</div>
                        }
                        @foreach (var app in Model.Applications.OrderByDescending(a => a.AppliedDate))
                        {
                            <div class="p-6 hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors flex flex-col md:flex-row md:items-center justify-between gap-4">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900/50 text-emerald-700 dark:text-emerald-400 flex items-center justify-center font-bold mr-4">
                                        @app.Candidate.FirstName.Substring(0,1)@app.Candidate.LastName.Substring(0,1)
                                    </div>
                                    <div>
                                        <div class="font-bold text-slate-800 dark:text-white">@app.Candidate.FirstName @app.Candidate.LastName</div>
                                        <div class="text-xs text-slate-500">@app.Candidate.Email Â· Applied @app.AppliedDate.ToString("MMM dd")</div>
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    @if (!string.IsNullOrEmpty(app.Candidate.ResumeUrl))
                                    {
                                        <a href="@app.Candidate.ResumeUrl" target="_blank" class="text-xs font-bold text-blue-600 hover:text-blue-800 bg-blue-50 dark:bg-blue-900/30 dark:text-blue-400 px-3 py-1.5 rounded-lg transition-colors flex items-center">
                                            <i data-lucide="file-text" class="w-3.5 h-3.5 mr-1.5"></i> Resume (PDF)
                                        </a>
                                    }
                                    <span class="px-3 py-1.5 bg-slate-100 dark:bg-slate-800 rounded-lg text-xs font-bold text-slate-600 dark:text-slate-400 uppercase tracking-wider">@app.Status</span>
                                    
                                    @if(app.Status == "New" || app.Status == "Screening")
                                    {
                                        <div class="flex gap-1">
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="ApplicationId" value="@app.Id" />
                                                <input type="hidden" name="Status" value="Accepted" />
                                                <button type="submit" class="p-1.5 text-emerald-600 hover:bg-emerald-50 dark:hover:bg-emerald-900/20 rounded-md transition-colors" title="Accept">
                                                    <i data-lucide="check" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="ApplicationId" value="@app.Id" />
                                                <input type="hidden" name="Status" value="Denied" />
                                                <button type="submit" class="p-1.5 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-md transition-colors" title="Deny">
                                                    <i data-lucide="x" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar / Apply Form -->
        <div class="lg:col-span-1">
            <div class="sticky top-8 space-y-8">
                <div class="bg-white dark:bg-slate-900 p-8 rounded-3xl shadow-xl border border-gray-100 dark:border-slate-800">
                    <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">Apply Now</h3>
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 p-4 rounded-xl text-sm mb-6 border border-red-100 dark:border-red-900/30">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Apply" method="post" enctype="multipart/form-data" class="space-y-5">
                        <input type="hidden" name="JobPostingId" value="@Model.Id" />
                        
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-xs font-bold text-slate-500 uppercase mb-2">First Name</label>
                                <input name="FirstName" class="w-full bg-slate-50 dark:bg-slate-950 border-transparent focus:bg-white dark:focus:bg-slate-900 focus:ring-2 focus:ring-[#004B87] rounded-xl p-3 text-sm transition-all dark:text-white" required />
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Last Name</label>
                                <input name="LastName" class="w-full bg-slate-50 dark:bg-slate-950 border-transparent focus:bg-white dark:focus:bg-slate-900 focus:ring-2 focus:ring-[#004B87] rounded-xl p-3 text-sm transition-all dark:text-white" required />
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Email Address</label>
                            <input name="Email" type="email" class="w-full bg-slate-50 dark:bg-slate-950 border-transparent focus:bg-white dark:focus:bg-slate-900 focus:ring-2 focus:ring-[#004B87] rounded-xl p-3 text-sm transition-all dark:text-white" required />
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Resume (PDF Only)</label>
                            <div class="relative">
                                <input type="file" name="Resume" accept=".pdf" class="w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-extrabold file:bg-blue-50 file:text-[#004B87] dark:file:bg-blue-900/30 dark:file:text-blue-400 hover:file:bg-blue-100 transition-all" required />
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Cover Letter (Optional)</label>
                            <textarea name="CoverLetter" rows="4" class="w-full bg-slate-50 dark:bg-slate-950 border-transparent focus:bg-white dark:focus:bg-slate-900 focus:ring-2 focus:ring-[#004B87] rounded-xl p-3 text-sm transition-all dark:text-white" placeholder="Tell us why you are a great fit..."></textarea>
                        </div>

                        <button type="submit" class="w-full bg-[#004B87] dark:bg-blue-600 hover:bg-[#003d6e] dark:hover:bg-blue-700 text-white font-bold py-4 rounded-xl shadow-lg transition-all transform hover:-translate-y-1">
                            Submit Application
                        </button>
                    </form>
                </div>
                
                <div class="bg-slate-900 dark:bg-slate-800 p-8 rounded-3xl text-white">
                    <h4 class="font-bold mb-4">Why Markain?</h4>
                    <ul class="text-sm space-y-4 opacity-80">
                        <li class="flex items-center"><i data-lucide="check-circle-2" class="w-4 h-4 mr-3 text-emerald-400"></i> Modern Green Management</li>
                        <li class="flex items-center"><i data-lucide="check-circle-2" class="w-4 h-4 mr-3 text-emerald-400"></i> Fully Remote Culture</li>
                        <li class="flex items-center"><i data-lucide="check-circle-2" class="w-4 h-4 mr-3 text-emerald-400"></i> Industry Leading Benefits</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
