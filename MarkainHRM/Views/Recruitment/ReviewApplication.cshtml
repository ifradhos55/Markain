@model OzarkLMS.Models.JobApplication

@{
    ViewData["Title"] = "Review Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto p-8">
    <div class="mb-6">
        <a asp-action="AdminDashboard" class="text-slate-500 hover:text-[#004B87] flex items-center text-sm font-medium">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-1"></i> Back to Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-emerald-100 border border-emerald-400 text-emerald-700 px-4 py-3 rounded relative mb-6" role="alert">
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
        </div>
    }

    <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 p-8 mb-6">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
                <h1 class="text-3xl font-bold text-slate-800 dark:text-white mb-1">
                    @Model.Candidate.FirstName @Model.Candidate.LastName
                </h1>
                <p class="text-slate-500 dark:text-slate-400">
                    Applied for <span class="font-bold">@Model.JobPosting.Title</span> on @Model.AppliedDate.ToString("MMM dd, yyyy")
                </p>
            </div>
            <div class="mt-4 md:mt-0">
                <span class="bg-blue-100 dark:bg-blue-900/40 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full text-sm font-bold border border-blue-200 dark:border-blue-800">
                    Status: @Model.Status
                </span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <div>
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-3">Contact Details</h3>
                <div class="space-y-3">
                    <div class="flex items-center text-slate-700 dark:text-slate-300">
                        <i data-lucide="mail" class="w-4 h-4 mr-2 text-slate-400"></i>
                        <a href="mailto:@Model.Candidate.Email" class="hover:text-[#004B87] hover:underline">@Model.Candidate.Email</a>
                    </div>
                    @if(!string.IsNullOrEmpty(Model.Candidate.Phone)) {
                        <div class="flex items-center text-slate-700 dark:text-slate-300">
                            <i data-lucide="phone" class="w-4 h-4 mr-2 text-slate-400"></i>
                            <a href="tel:@Model.Candidate.Phone" class="hover:text-[#004B87] hover:underline">@Model.Candidate.Phone</a>
                        </div>
                    }
                    @if(!string.IsNullOrEmpty(Model.Candidate.LinkedInUrl)) {
                        <div class="flex items-center text-slate-700 dark:text-slate-300">
                            <i data-lucide="linkedin" class="w-4 h-4 mr-2 text-slate-400"></i>
                            <a href="@Model.Candidate.LinkedInUrl" target="_blank" class="hover:text-[#004B87] hover:underline">LinkedIn Profile</a>
                        </div>
                    }
                </div>
            </div>
            <div>
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-3">Documents</h3>
                @if(!string.IsNullOrEmpty(Model.Candidate.ResumeUrl)) {
                    <a href="@Model.Candidate.ResumeUrl" target="_blank" class="flex items-center p-3 rounded-lg border border-gray-200 dark:border-slate-700 hover:bg-gray-50 dark:hover:bg-slate-800 transition-colors group">
                        <div class="w-10 h-10 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 rounded-lg flex items-center justify-center mr-3">
                            <i data-lucide="file-text" class="w-5 h-5"></i>
                        </div>
                        <div>
                            <div class="font-bold text-slate-800 dark:text-white group-hover:text-[#004B87] dark:group-hover:text-blue-400">View Resume</div>
                            <div class="text-xs text-slate-500">External Link</div>
                        </div>
                    </a>
                } else {
                    <p class="text-slate-500 italic text-sm">No resume provided.</p>
                }
            </div>
        </div>

        @if(!string.IsNullOrEmpty(Model.CoverLetter)) {
            <div class="border-t border-gray-100 dark:border-slate-800 pt-6">
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-3">Cover Letter</h3>
                <div class="bg-gray-50 dark:bg-slate-950 p-6 rounded-lg text-slate-700 dark:text-slate-300 whitespace-pre-line border border-gray-100 dark:border-slate-800">
                    @Model.CoverLetter
                </div>
            </div>
        }
    </div>

    <!-- Actions -->
    <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 p-8">
        <h2 class="text-xl font-bold text-slate-800 dark:text-white mb-4">Update Application Status</h2>
        <div class="flex flex-wrap gap-3">
            <form asp-action="UpdateStatus" method="post" class="inline">
                <input type="hidden" name="ApplicationId" value="@Model.Id" />
                <input type="hidden" name="Status" value="Screening" />
                <button type="submit" class="bg-blue-100 text-blue-700 hover:bg-blue-200 px-4 py-2 rounded-lg font-bold transition-colors @(Model.Status == "Screening" ? "ring-2 ring-blue-500" : "")">
                    Move to Screening
                </button>
            </form>
            
            <form asp-action="UpdateStatus" method="post" class="inline">
                <input type="hidden" name="ApplicationId" value="@Model.Id" />
                <input type="hidden" name="Status" value="Interview" />
                <button type="submit" class="bg-purple-100 text-purple-700 hover:bg-purple-200 px-4 py-2 rounded-lg font-bold transition-colors @(Model.Status == "Interview" ? "ring-2 ring-purple-500" : "")">
                    Schedule Interview
                </button>
            </form>

            <form asp-action="UpdateStatus" method="post" class="inline">
                <input type="hidden" name="ApplicationId" value="@Model.Id" />
                <input type="hidden" name="Status" value="Offer" />
                <button type="submit" class="bg-amber-100 text-amber-700 hover:bg-amber-200 px-4 py-2 rounded-lg font-bold transition-colors @(Model.Status == "Offer" ? "ring-2 ring-amber-500" : "")">
                    Extend Offer
                </button>
            </form>

            <form asp-action="UpdateStatus" method="post" class="inline">
                <input type="hidden" name="ApplicationId" value="@Model.Id" />
                <input type="hidden" name="Status" value="Hired" />
                <button type="submit" class="bg-emerald-100 text-emerald-700 hover:bg-emerald-200 px-4 py-2 rounded-lg font-bold transition-colors @(Model.Status == "Hired" ? "ring-2 ring-emerald-500" : "")">
                    Mark as Hired
                </button>
            </form>

            <form asp-action="UpdateStatus" method="post" class="inline">
                <input type="hidden" name="ApplicationId" value="@Model.Id" />
                <input type="hidden" name="Status" value="Rejected" />
                <button type="submit" class="bg-red-100 text-red-700 hover:bg-red-200 px-4 py-2 rounded-lg font-bold transition-colors @(Model.Status == "Rejected" ? "ring-2 ring-red-500" : "")">
                    Reject
                </button>
            </form>
        </div>
    </div>
</div>
