@{
    ViewData["Title"] = "Add Module Item";
    var module = ViewBag.Module as OzarkLMS.Models.Module;
}

<div class="p-8 max-w-[600px] mx-auto">
    <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
        <div class="p-6 border-b border-gray-100 bg-gray-50">
             <h1 class="text-xl font-bold text-[#004B87]">Add Item to @module?.Title</h1>
        </div>
        
        <form asp-action="AddItem" enctype="multipart/form-data" class="p-8 space-y-6">
            <input type="hidden" name="moduleId" value="@module?.Id" />
            
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Item Title</label>
                <input name="title" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-[#004B87] focus:ring-[#004B87]" required />
            </div>

            <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Item Type</label>
                <select name="type" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-[#004B87] focus:ring-[#004B87]" onchange="toggleFile(this)">
                    <option value="page">Page / Link</option>
                    <option value="file">File Upload (PDF, Docx)</option>
                </select>
            </div>

            <div id="fileUpload" class="hidden space-y-4">
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Upload File</label>
                    <input type="file" name="file" class="w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-[#004B87] hover:file:bg-blue-100"/>
                </div>
                
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Display Mode</label>
                    <div class="flex space-x-4">
                        <label class="flex items-center">
                            <input type="radio" name="displayMode" value="link" checked class="text-[#004B87] focus:ring-[#004B87]" />
                            <span class="ml-2 text-sm text-slate-700">List View (Download/Link)</span>
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="displayMode" value="embed" class="text-[#004B87] focus:ring-[#004B87]" />
                            <span class="ml-2 text-sm text-slate-700">Direct View (Embed)</span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="flex justify-end pt-6 border-t border-gray-100">
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@module?.CourseId" class="mr-4 px-6 py-2 text-slate-500 font-bold hover:text-slate-700">Cancel</a>
                <button type="submit" class="bg-[#004B87] text-white px-6 py-2 rounded-lg font-bold hover:bg-[#003d6e] shadow-lg shadow-blue-900/20">
                    Add Item
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function toggleFile(select) {
        var fileDiv = document.getElementById('fileUpload');
        if (select.value === 'file') {
            fileDiv.classList.remove('hidden');
        } else {
            fileDiv.classList.add('hidden');
        }
    }
</script>
