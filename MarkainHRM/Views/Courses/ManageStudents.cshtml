@model OzarkLMS.ViewModels.CourseStudentsViewModel

<div class="p-8 max-w-[1200px] mx-auto">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-[#004B87] dark:text-white">Manage Employees</h1>
            <p class="text-slate-500 dark:text-slate-400">For @Model.Course.Name (@Model.Course.Code)</p>
        </div>
        <a asp-action="Index" class="text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200 font-bold flex items-center transition-colors">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i> Back to Courses
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Enrolled Employees -->
        <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 overflow-hidden">
            <div class="p-4 border-b border-gray-100 dark:border-slate-800 bg-gray-50 dark:bg-slate-950 flex justify-between items-center">
                <h3 class="font-bold text-slate-800 dark:text-white flex items-center">
                    <i data-lucide="users" class="w-5 h-5 mr-2 text-[#004B87] dark:text-blue-400"></i> Enrolled Employees
                    <span class="ml-2 bg-blue-100 dark:bg-blue-900 text-[#004B87] dark:text-blue-300 text-xs px-2 py-0.5 rounded-full">@Model.EnrolledStudents.Count</span>
                </h3>
            </div>
            <div class="divide-y divide-gray-50 dark:divide-slate-800">
                @if (!Model.EnrolledStudents.Any())
                {
                    <div class="p-8 text-center text-slate-400 dark:text-slate-500 text-sm">No employees enrolled yet.</div>
                }
                @foreach (var student in Model.EnrolledStudents)
                {
                    <div class="p-4 flex justify-between items-center group hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors">
                        <div class="flex items-center">
                            <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900 text-[#004B87] dark:text-blue-300 flex items-center justify-center font-bold text-xs mr-3">
                                @student.Username.Substring(0, 1).ToUpper()
                            </div>
                            <span class="font-bold text-slate-700 dark:text-slate-200">@student.Username</span>
                        </div>
                        <button type="button" onclick="openRemoveStudentModal(@student.Id, '@student.Username')" class="text-slate-400 hover:text-red-600 dark:hover:text-red-400 p-2 rounded-full hover:bg-white dark:hover:bg-slate-800 transition-all opacity-0 group-hover:opacity-100">
                            <i data-lucide="user-minus" class="w-4 h-4"></i>
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Available Employees -->
        <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 overflow-hidden">
            <div class="p-4 border-b border-gray-100 dark:border-slate-800 bg-gray-50 dark:bg-slate-950 flex justify-between items-center">
                <h3 class="font-bold text-slate-800 dark:text-white flex items-center">
                    <i data-lucide="user-plus" class="w-5 h-5 mr-2 text-green-600 dark:text-green-400"></i> Available Employees
                </h3>
            </div>
             <div class="divide-y divide-gray-50 dark:divide-slate-800">
                @if (!Model.AvailableStudents.Any())
                {
                    <div class="p-8 text-center text-slate-400 dark:text-slate-500 text-sm">No employees available to enroll.</div>
                }
                @foreach (var student in Model.AvailableStudents)
                {
                    <div class="p-4 flex justify-between items-center group hover:bg-green-50 dark:hover:bg-green-900/20 transition-colors">
                        <div class="flex items-center">
                            <div class="w-8 h-8 rounded-full bg-gray-100 dark:bg-slate-800 text-slate-500 dark:text-slate-400 flex items-center justify-center font-bold text-xs mr-3">
                                @student.Username.Substring(0, 1).ToUpper()
                            </div>
                            <span class="font-medium text-slate-600 dark:text-slate-300">@student.Username</span>
                        </div>
                        <form asp-action="AddStudent" method="post">
                            <input type="hidden" name="courseId" value="@Model.Course.Id" />
                            <input type="hidden" name="studentId" value="@student.Id" />
                            <button type="submit" class="text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-300 p-1 px-3 rounded text-xs font-bold border border-green-200 dark:border-green-800 hover:bg-white dark:hover:bg-slate-800 transition-all">
                                Enroll
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Remove Student Confirmation Modal -->
<div id="removeStudentModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm transition-opacity" onclick="closeRemoveStudentModal()"></div>
    
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div class="relative transform overflow-hidden rounded-2xl bg-white dark:bg-slate-800 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-md border border-slate-100 dark:border-slate-700">
                <div class="p-6">
                    <div class="flex items-center justify-center w-12 h-12 mx-auto bg-red-100 dark:bg-red-900/30 rounded-full mb-4">
                        <i data-lucide="alert-triangle" class="w-6 h-6 text-red-600 dark:text-red-400"></i>
                    </div>
                    <div class="text-center">
                        <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2" id="modal-title">Remove Employee</h3>
                        <p class="text-sm text-slate-500 dark:text-slate-400">
                            Are you sure you want to remove <span id="removeStudentName" class="font-bold text-slate-800 dark:text-slate-200"></span> from this course? This action will remove all their course progress.
                        </p>
                    </div>
                </div>
                <div class="bg-slate-50 dark:bg-slate-700/50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                    <form asp-action="RemoveStudent" method="post" class="w-full sm:w-auto sm:ml-3">
                        <input type="hidden" id="removeStudentId" name="studentId" value="" />
                        <input type="hidden" name="courseId" value="@Model.Course.Id" />
                        <button type="submit" class="inline-flex w-full justify-center rounded-xl bg-red-600 px-3 py-2 text-sm font-bold text-white shadow-sm hover:bg-red-500 sm:w-auto transition-colors">
                            Remove Employee
                        </button>
                    </form>
                    <button type="button" onclick="closeRemoveStudentModal()" class="mt-3 inline-flex w-full justify-center rounded-xl bg-white dark:bg-slate-800 px-3 py-2 text-sm font-bold text-slate-900 dark:text-slate-300 shadow-sm ring-1 ring-inset ring-slate-300 dark:ring-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700 sm:mt-0 sm:w-auto transition-colors">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function openRemoveStudentModal(id, username) {
        document.getElementById('removeStudentId').value = id;
        document.getElementById('removeStudentName').textContent = username;
        document.getElementById('removeStudentModal').classList.remove('hidden');
    }

    function closeRemoveStudentModal() {
        document.getElementById('removeStudentModal').classList.add('hidden');
    }
</script>
