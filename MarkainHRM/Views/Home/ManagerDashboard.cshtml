@model OzarkLMS.ViewModels.ManagerDashboardViewModel
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="p-8 max-w-[1600px] mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-[#004B87] dark:text-white">Manager Dashboard</h1>
            <p class="text-slate-500 dark:text-slate-400">
                Overseeing <span class="font-bold text-slate-700 dark:text-slate-200">@Model.Department.Name</span> Department
            </p>
        </div>
        <div class="flex space-x-3">
            <button class="bg-[#004B87] dark:bg-blue-600 text-white px-4 py-2 rounded-lg font-bold shadow-sm hover:bg-[#003d6e] dark:hover:bg-blue-700 transition-colors flex items-center">
                <i data-lucide="calendar-plus" class="w-4 h-4 mr-2"></i> Team Schedule
            </button>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Team Headcount -->
        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 flex items-center justify-between">
            <div>
                <h3 class="text-slate-500 dark:text-slate-400 font-medium text-xs uppercase tracking-wider">Team Headcount</h3>
                <p class="text-3xl font-bold text-slate-800 dark:text-white mt-1">@Model.Headcount</p>
            </div>
            <div class="p-3 bg-blue-50 dark:bg-blue-900/20 rounded-full text-[#004B87] dark:text-blue-300">
                <i data-lucide="users" class="w-6 h-6"></i>
            </div>
        </div>

        <!-- Attendance Today -->
        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 flex items-center justify-between">
            <div>
                <h3 class="text-slate-500 dark:text-slate-400 font-medium text-xs uppercase tracking-wider">Present Today</h3>
                <div class="flex items-end gap-2 mt-1">
                    <p class="text-3xl font-bold text-emerald-600 dark:text-emerald-400">@Model.PresentToday</p>
                    <p class="text-sm text-slate-400 mb-1">/ @Model.Headcount</p>
                </div>
            </div>
            <div class="p-3 bg-emerald-50 dark:bg-emerald-900/20 rounded-full text-emerald-600 dark:text-emerald-400">
                <i data-lucide="user-check" class="w-6 h-6"></i>
            </div>
        </div>

        <!-- Pending Leave -->
        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 flex items-center justify-between relative overflow-hidden">
            @if(Model.PendingLeaveRequests > 0) {
                <div class="absolute top-0 right-0 w-3 h-3 bg-red-500 rounded-full m-2"></div>
            }
            <div>
                <h3 class="text-slate-500 dark:text-slate-400 font-medium text-xs uppercase tracking-wider">Pending Leave</h3>
                <p class="text-3xl font-bold text-slate-800 dark:text-white mt-1">@Model.PendingLeaveRequests</p>
            </div>
            <div class="p-3 bg-orange-50 dark:bg-orange-900/20 rounded-full text-orange-600 dark:text-orange-400">
                <i data-lucide="clock" class="w-6 h-6"></i>
            </div>
        </div>

        <!-- Team Performance -->
        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 flex items-center justify-between">
            <div>
                <h3 class="text-slate-500 dark:text-slate-400 font-medium text-xs uppercase tracking-wider">Avg. Performance</h3>
                <p class="text-3xl font-bold text-slate-800 dark:text-white mt-1">@Model.AverageTeamPerformance</p>
            </div>
            <div class="p-3 bg-purple-50 dark:bg-purple-900/20 rounded-full text-purple-600 dark:text-purple-400">
                <i data-lucide="bar-chart-2" class="w-6 h-6"></i>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Team List -->
        <div class="lg:col-span-2 bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 overflow-hidden">
            <div class="p-6 border-b border-gray-200 dark:border-slate-800 flex justify-between items-center">
                <h2 class="text-lg font-bold text-slate-800 dark:text-white">Team Members</h2>
                <a href="#" class="text-sm text-[#004B87] dark:text-blue-400 font-medium hover:underline">View All</a>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm">
                    <thead class="bg-gray-50 dark:bg-slate-950 text-slate-500 dark:text-slate-400 font-medium border-b border-gray-200 dark:border-slate-800">
                        <tr>
                            <th class="px-6 py-4">Employee</th>
                            <th class="px-6 py-4">Status</th>
                            <th class="px-6 py-4">Role</th>
                            <th class="px-6 py-4">Next Review</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-slate-800">
                        @foreach (var member in Model.TeamMembers)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-slate-800 transition-colors">
                                <td class="px-6 py-4 font-medium text-slate-800 dark:text-slate-200 flex items-center">
                                    <div class="w-8 h-8 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center mr-3 text-xs font-bold text-slate-600 dark:text-slate-300">
                                        @member.Username.Substring(0,1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="font-bold">@member.Username</div>
                                        <div class="text-[10px] text-slate-500">@member.Role</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="bg-emerald-50 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400 px-2 py-1 rounded-full text-xs font-bold">Active</span>
                                </td>
                                <td class="px-6 py-4 text-slate-600 dark:text-slate-300">@member.JobTitle</td>
                                <td class="px-6 py-4 text-slate-600 dark:text-slate-300">
                                    <!-- Mock Logic for Review Date -->
                                    <span class="flex items-center text-orange-600 dark:text-orange-400 font-medium">
                                        <i data-lucide="alert-circle" class="w-3 h-3 mr-1"></i> Due in 5 days
                                    </span>
                                </td>
                            </tr>
                        }
                        @if(!Model.TeamMembers.Any())
                        {
                            <tr>
                                <td colspan="4" class="px-6 py-8 text-center text-slate-500 dark:text-slate-400">
                                    No team members assigned to your department yet.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Right Column: Approvals & Notifications -->
        <div class="space-y-6">
            <!-- Approvals Widget -->
            <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 overflow-hidden">
                <div class="p-5 border-b border-gray-200 dark:border-slate-800">
                    <h2 class="text-sm font-bold text-slate-800 dark:text-white uppercase tracking-wider flex items-center">
                        <i data-lucide="check-square" class="w-4 h-4 mr-2"></i> Pending Approvals
                    </h2>
                </div>
                <div class="p-5 space-y-4">
                    <!-- Mock Items -->
                    <div class="p-3 rounded-lg border border-slate-100 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                        <div class="flex justify-between items-start mb-2">
                            <span class="text-xs font-bold text-slate-700 dark:text-slate-300">Leave Request</span>
                            <span class="text-[10px] text-slate-400">2h ago</span>
                        </div>
                        <p class="text-sm text-slate-600 dark:text-slate-400 mb-3">
                            <span class="font-bold text-slate-800 dark:text-slate-200">Sarah Jenkins</span> requested 2 days off (Sick Leave).
                        </p>
                        <div class="flex gap-2">
                            <button class="bg-emerald-600 text-white text-xs px-3 py-1.5 rounded hover:bg-emerald-700 transition-colors">Approve</button>
                            <button class="bg-red-50 text-red-600 text-xs px-3 py-1.5 rounded hover:bg-red-100 transition-colors dark:bg-red-900/30 dark:text-red-300 dark:hover:bg-red-900/50">Reject</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Performance Review Reminder -->
            <div class="bg-[#004B87] dark:bg-blue-900 rounded-xl p-6 text-white relative overflow-hidden">
                <div class="absolute top-0 right-0 -mt-2 -mr-2 bg-white/10 w-24 h-24 rounded-full blur-2xl"></div>
                <h3 class="text-lg font-bold mb-2">Upcoming Reviews</h3>
                <p class="text-blue-100 text-sm mb-4">You have <span class="font-bold text-white">@Model.UpcomingReviews</span> performance reviews due this month.</p>
                <button class="bg-white text-[#004B87] px-4 py-2 rounded-lg text-sm font-bold shadow-sm hover:bg-blue-50 transition-colors w-full">Start Review Process</button>
            </div>
        </div>
    </div>
</div>
