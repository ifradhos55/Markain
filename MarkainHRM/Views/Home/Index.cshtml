@model OzarkLMS.ViewModels.DashboardViewModel
@using System.Security.Claims

<div class="space-y-12">
    <!-- Premium Hero Section (Flush Content) -->
    <div class="relative overflow-hidden bg-gradient-to-br from-emerald-950 via-emerald-900 to-emerald-950 p-6 md:p-10 shadow-premium-dark w-full">
        <!-- Dynamic 3D Waves -->
        <div class="absolute inset-0 opacity-20 pointer-events-none overflow-hidden container-waves">
            <svg class="absolute inset-0 w-full h-full" preserveAspectRatio="none" viewBox="0 0 1440 400" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <linearGradient id="hero-wave-grad" x1="0%" y1="0%" x2="0%" y2="100%">
                        <stop offset="0%" stop-color="#10B981" stop-opacity="0.6" />
                        <stop offset="100%" stop-color="#064E3B" stop-opacity="0" />
                    </linearGradient>
                </defs>
                <path class="hero-wave hw-1" d="M0,200 Q360,150 720,200 T1440,200 V400 H0 Z" fill="url(#hero-wave-grad)" />
                <path class="hero-wave hw-2" d="M0,250 Q360,300 720,250 T1440,250 V400 H0 Z" fill="#34D399" opacity="0.2" />
            </svg>
        </div>

        <style>
            .hero-wave { animation: hero-float 15s ease-in-out infinite alternate; }
            .hw-1 { animation-duration: 18s; }
            .hw-2 { animation-duration: 22s; animation-delay: -5s; }
            @@keyframes hero-float {
                from { transform: translateY(0) scaleY(1); }
                to { transform: translateY(-20px) scaleY(1.05); }
            }
        </style>

        <div class="relative z-10 flex flex-col md:flex-row items-end justify-between gap-8">
            <div class="space-y-4">
                <div class="flex items-center gap-4">
                    <span class="px-3 py-0.5 rounded-full bg-emerald-500/20 border border-emerald-500/20 text-emerald-400 text-[9px] font-black uppercase tracking-[0.2em]">Operational Overview</span>
                    <span id="currentTime" class="text-emerald-500/60 text-[9px] font-bold">@DateTime.Now.ToString("HH:mm:ss")</span>
                </div>
                
                <div>
                    @{
                        var hour = DateTime.Now.Hour;
                        string greeting = hour < 12 ? "Good Morning" : hour < 17 ? "Good Afternoon" : "Good Evening";
                    }
                    <h1 class="text-4xl md:text-5xl font-black text-white tracking-tighter leading-none mb-3">
                        @greeting, <span class="text-emerald-500">@Model.User.Username.</span>
                    </h1>
                    <p class="text-emerald-100/60 text-sm md:text-base font-medium max-w-xl leading-relaxed">
                        Welcome to your command center. You have <span class="text-white font-bold">@Model.Courses.Count active modules</span> assigned for this quarter.
                    </p>
                </div>
            </div>

            <div class="flex flex-wrap gap-4 pb-2">
                <a asp-controller="Collaboration" asp-action="Index" class="bg-white hover:bg-emerald-50 text-emerald-950 px-6 py-3.5 rounded-2xl font-black shadow-xl transition-all flex items-center gap-3 transform hover:-translate-y-1">
                    <i data-lucide="zap" class="w-4 h-4 fill-emerald-950"></i>
                    ENTER HUB
                </a>
                @if(Model.User.Role == "instructor" || Model.User.Role == "admin")
                {
                    <a asp-controller="Courses" asp-action="Create" class="bg-emerald-500/10 border border-emerald-500/20 hover:bg-emerald-500/20 text-emerald-400 px-6 py-3.5 rounded-2xl font-black transition-all flex items-center gap-3 backdrop-blur-md">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        NEW MODULE
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="px-4 md:p-8 lg:p-12 max-w-[1700px] mx-auto space-y-12">
        <div class="space-y-12">
            <!-- Training Spotlight (Full Width) -->
            <div class="space-y-10">
                <!-- Training Grid -->
                <div>
                     <div class="flex items-center justify-between mb-8">
                        <h2 class="text-2xl font-black text-emerald-950 dark:text-white flex items-center gap-3">
                            Active Training
                        </h2>
                        <a asp-controller="Courses" asp-action="Index" class="text-sm font-black text-emerald-900/40 dark:text-emerald-50/40 hover:text-emerald-900 dark:hover:text-white transition-colors uppercase tracking-widest">View All</a>
                    </div>

                    @if(!Model.Courses.Any())
                    {
                        <div class="bg-white/50 dark:bg-emerald-900/10 backdrop-blur-sm rounded-4xl border-2 border-dashed border-emerald-900/5 dark:border-emerald-50/5 p-20 text-center">
                            <i data-lucide="Inbox" class="w-12 h-12 text-emerald-900/20 mx-auto mb-4"></i>
                            <p class="text-emerald-900/40 dark:text-emerald-50/40 font-bold">No assigned training modules at this time.</p>
                        </div>
                    }
                    else
                    {
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                            @foreach(var course in Model.Courses)
                            {
                                <!-- Modern Training Card -->
                                <div class="group relative bg-white dark:bg-emerald-950/20 rounded-2xl p-8 border border-emerald-900/5 dark:border-emerald-50/5 shadow-premium hover:shadow-2xl hover:scale-[1.02] transition-all duration-500 overflow-hidden">
                                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="absolute inset-0 z-0"></a>
                                    

                                    <div class="relative z-10 space-y-6">
                                        <div class="flex justify-between items-start">
                                            <span class="px-3 py-1 rounded-full bg-amber-100 text-amber-800 text-[10px] font-black uppercase tracking-widest">@course.Code</span>
                                            @if(Model.User.Role == "admin" || Model.User.Role == "instructor")
                                            {
                                                <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="z-20 p-2 text-emerald-900/40 hover:text-emerald-900 dark:text-emerald-50/40 dark:hover:text-white transition-colors">
                                                    <i data-lucide="edit-3" class="w-4 h-4"></i>
                                                </a>
                                            }
                                        </div>
                                        
                                        <h3 class="text-2xl font-black text-emerald-950 dark:text-white leading-tight group-hover:text-amber-600 transition-colors">@course.Name</h3>
                                        
                                        <div class="flex items-center gap-4 pt-4 border-t border-emerald-900/5 dark:border-emerald-50/5">
                                            @if(course.Instructor != null)
                                            {
                                                <div class="flex items-center gap-2">
                                                    <div class="w-8 h-8 rounded-xl bg-emerald-900 dark:bg-emerald-500 flex items-center justify-center text-white dark:text-emerald-950 font-black text-xs shadow-lg">
                                                        @(course.Instructor.Username.Substring(0,1).ToUpper())
                                                    </div>
                                                    <span class="text-xs font-bold text-emerald-900/60 dark:text-emerald-50/60">@course.Instructor.Username</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Productivity: Quick Reminders -->
                <div class="space-y-8">
                    <div class="flex items-center justify-between">
                        <h2 class="text-2xl font-black text-emerald-950 dark:text-white flex items-center gap-3">
                            Office Pins
                        </h2>
                        <form asp-action="AddStickyNote" method="post" class="flex items-center bg-white dark:bg-emerald-800/20 px-4 py-2 rounded-2xl border border-emerald-900/10 dark:border-emerald-500/50 shadow-sm focus-within:ring-2 focus-within:ring-emerald-500 transition-all">
                            <input name="content" class="bg-transparent border-none focus:ring-0 text-sm font-bold text-emerald-950 dark:text-white placeholder-emerald-900/40 dark:placeholder-white/60" placeholder="Pin a new note..." required autocomplete="off" />
                            <button type="submit" class="p-2 text-emerald-500 hover:scale-110 transition-transform">
                                <i data-lucide="plus-circle" class="w-5 h-5"></i>
                            </button>
                            <input type="hidden" name="color" value="bg-[#FEF9C3]" /> @* Default Natural Yellow *@
                        </form>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-6">
                        @foreach (var note in Model.StickyNotes)
                        {
                            <div class="group relative p-6 rounded-2xl shadow-premium border border-black/5 flex flex-col min-h-[160px] transition-all-300 hover:-rotate-1 hover:scale-105" 
                                 style="background-color: @(note.Color.Contains("bg-yellow") ? "#FEF3C7" : note.Color.Contains("bg-blue") ? "#DBEAFE" : note.Color.Contains("bg-green") ? "#D1FAE5" : "#FCE7F3")">
                                
                                <!-- Tape Effect -->
                                <div class="absolute -top-3 left-1/2 -translate-x-1/2 w-16 h-8 bg-white/40 backdrop-blur-md rotate-2 border border-black/5 z-20"></div>

                                <form asp-action="UpdateStickyNote" method="post" class="h-full relative z-10">
                                    <input type="hidden" name="id" value="@note.Id" />
                                    <textarea name="content" onblur="this.form.submit()" 
                                              class="w-full h-full bg-transparent border-0 resize-none focus:ring-0 text-emerald-950 font-bold text-sm leading-relaxed p-0">@note.Content</textarea>
                                </form>
                                
                                <form asp-action="DeleteStickyNote" method="post" class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <input type="hidden" name="id" value="@note.Id" />
                                    <button type="submit" class="p-2 text-emerald-900/20 hover:text-red-600 transition-colors">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </button>
                                </form>
                            </div>
                        }
                        @if (!Model.StickyNotes.Any())
                        {
                            <div class="col-span-full border-2 border-dashed border-emerald-900/10 dark:border-emerald-500/40 rounded-3xl p-12 flex flex-col items-center justify-center text-emerald-900/40 dark:text-white/60">
                                <i data-lucide="sticky-note" class="w-8 h-8 mb-2"></i>
                                <span class="text-sm font-bold">Your workspace is clear.</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Strategy Row (Full Width Multi-Col) -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
                <!-- Premium Calendar Widget -->
                <div class="lg:col-span-1 bg-white dark:bg-emerald-950/20 rounded-4xl shadow-premium border border-emerald-900/5 dark:border-emerald-50/5 overflow-hidden">
                    <div id="calendar-root" class="p-8 h-full flex flex-col">
                        <!-- High-End Planner rendered here via JS -->
                    </div>
                </div>

                <!-- Access & Analytics Group -->
                <div class="lg:col-span-2 space-y-10">
                    <!-- Access Levels / Clearance -->
                    <div class="relative overflow-hidden bg-emerald-900 dark:bg-emerald-500 rounded-3xl p-8 shadow-xl">
                        <div class="absolute top-0 right-0 p-4 opacity-10">
                            <i data-lucide="shield" class="w-16 h-16 text-white dark:text-emerald-950"></i>
                        </div>
                        <div class="relative z-10 space-y-2">
                            <span class="text-[10px] font-black uppercase tracking-widest text-emerald-100 dark:text-emerald-950/60">System Clearance</span>
                            <h3 class="text-xl font-black text-white dark:text-emerald-950 uppercase tracking-tighter">@Model.User.Role ACCESS ACTIVE</h3>
                            <p class="text-emerald-100/60 dark:text-emerald-950/40 text-xs font-bold leading-relaxed">
                                Authorized for all management features within the Markain Management System.
                            </p>
                        </div>
                    </div>

                    <!-- Dashboard Analytics / Quick Stats -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-white dark:bg-emerald-950/20 p-6 rounded-3xl border border-emerald-900/5 dark:border-emerald-50/5 shadow-sm group hover:scale-105 transition-all">
                            <span class="text-[10px] font-black text-emerald-900/40 dark:text-emerald-50/40 uppercase tracking-widest">Active Modules</span>
                            <div class="text-3xl font-black text-emerald-950 dark:text-white group-hover:text-emerald-500 transition-colors">@Model.Courses.Count</div>
                        </div>
                        <div class="bg-white dark:bg-emerald-950/20 p-6 rounded-3xl border border-emerald-900/5 dark:border-emerald-50/5 shadow-sm group hover:scale-105 transition-all">
                            <span class="text-[10px] font-black text-emerald-900/40 dark:text-emerald-50/40 uppercase tracking-widest">Team Comms</span>
                            <div class="text-3xl font-black text-emerald-950 dark:text-white group-hover:text-emerald-500 transition-colors">LIVE</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const courses = @Json.Serialize(Model.Courses.Select(c => new {
            id = c.Id,
            name = c.Name,
            assignments = c.Assignments.Select(a => new {
                id = a.Id,
                title = a.Title,
                dueDate = a.DueDate.ToString("yyyy-MM-dd"),
                courseName = c.Name
            })
        }));

        const calendarEvents = @Json.Serialize(Model.CalendarEvents.Select(e => new {
            id = e.Id,
            title = e.Title,
            start = e.Start.ToString("yyyy-MM-dd"),
            color = e.Color
        }));

        const events = [];
        
        courses.forEach(c => {
            if(c.assignments) {
                c.assignments.forEach(a => {
                    events.push({
                        date: a.dueDate,
                        title: a.title,
                        courseName: a.courseName,
                        type: 'assignment'
                    });
                });
            }
        });

        if (calendarEvents) {
            calendarEvents.forEach(e => {
                events.push({
                    date: e.start,
                    title: e.title,
                    courseName: 'System Event',
                    type: 'event'
                });
            });
        }

        let currentDate = new Date();
        const calendarRoot = document.getElementById('calendar-root');

        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const monthName = currentDate.toLocaleString('default', { month: 'long' });

            let html = `
                <div class="flex items-center justify-between mb-8">
                    <h3 class="font-black text-emerald-950 dark:text-white text-xl tracking-tighter uppercase">${monthName}</h3>
                    <div class="flex gap-2">
                        <button class="cal-nav-prev w-10 h-10 flex items-center justify-center bg-emerald-50 dark:bg-emerald-500/10 rounded-xl hover:bg-emerald-100 transition-colors transition-all active:scale-95">
                            <i data-lucide="chevron-left" class="w-5 h-5 text-emerald-900 dark:text-emerald-50"></i>
                        </button>
                        <button class="cal-nav-next w-10 h-10 flex items-center justify-center bg-emerald-50 dark:bg-emerald-500/10 rounded-xl hover:bg-emerald-100 transition-colors transition-all active:scale-95">
                            <i data-lucide="chevron-right" class="w-5 h-5 text-emerald-900 dark:text-emerald-50"></i>
                        </button>
                    </div>
                </div>
                <div class="grid grid-cols-7 gap-2 mb-4">
                    ${['SUN','MON','TUE','WED','THU','FRI','SAT'].map(d => `<div class="text-[9px] font-black text-emerald-900/30 dark:text-emerald-50/30 text-center uppercase tracking-widest">${d}</div>`).join('')}
                </div>
                <div class="grid grid-cols-7 gap-2 place-items-center">
            `;

            for(let i=0; i<firstDay; i++) {
                html += `<div class="h-10 w-10"></div>`;
            }

            const today = new Date();
            const isCurrentMonth = today.getMonth() === month && today.getFullYear() === year;

            for(let d=1; d<=daysInMonth; d++) {
                const dateStr = `${year}-${String(month+1).padStart(2, '0')}-${String(d).padStart(2, '0')}`;
                const dayEvents = events.filter(e => e.date === dateStr);
                const isToday = isCurrentMonth && today.getDate() === d;

                const activeClass = isToday ? 'bg-amber-600 text-white shadow-xl shadow-amber-600/20 scale-110' : 'text-emerald-950 dark:text-emerald-50 hover:bg-emerald-50 dark:hover:bg-emerald-500/10';
                
                html += `
                    <div class="h-10 w-10 flex items-center justify-center relative group cursor-pointer rounded-xl transition-all duration-300 ${activeClass} cal-day">
                        <span class="text-xs font-black">${d}</span>
                        ${dayEvents.length > 0 ? `<div class="absolute bottom-1 w-1 h-1 rounded-full ${isToday ? 'bg-white' : 'bg-emerald-500 animate-pulse'}"></div>` : ''}
                        
                        ${dayEvents.length > 0 ? `
                            <div class="absolute bottom-full mb-3 left-1/2 transform -translate-x-1/2 w-64 bg-emerald-950 rounded-3xl p-6 shadow-2xl scale-0 group-hover:scale-100 transition-transform origin-bottom z-50 pointer-events-none">
                                <p class="text-[10px] font-black text-emerald-400 mb-4 uppercase tracking-widest">SCHEDULED TASKS</p>
                                ${dayEvents.map(e => `
                                    <div class="p-3 bg-white/5 rounded-2xl mb-2 border border-white/5 last:mb-0">
                                        <div class="text-xs font-bold text-white truncate">${e.title}</div>
                                        <div class="text-[10px] text-emerald-100/40 truncate">${e.courseName}</div>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}
                    </div>
                `;
            }

            html += `</div>`;

            const upcomingEvents = events
                .filter(e => new Date(e.date) >= new Date().setHours(0,0,0,0))
                .sort((a, b) => new Date(a.date) - new Date(b.date))
                .slice(0, 3);

            if (upcomingEvents.length > 0) {
                html += `
                    <div class="mt-8 pt-6 border-t border-emerald-900/5 dark:border-emerald-50/5">
                        <h4 class="text-[10px] font-black text-emerald-900/40 dark:text-emerald-50/40 uppercase tracking-widest mb-4">Strategic Timeline</h4>
                        <div class="space-y-4">
                `;
                
                upcomingEvents.forEach(ev => {
                    const evDate = new Date(ev.date + 'T00:00:00');
                    const dateDisplay = evDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                    
                    html += `
                        <div class="flex items-center gap-4 group cursor-pointer transition-all hover:translate-x-1">
                            <div class="w-1.5 h-1.5 rounded-full bg-emerald-500 group-hover:scale-150 transition-transform"></div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-black text-emerald-950 dark:text-white truncate">${ev.title}</p>
                                <p class="text-[10px] text-emerald-900/40 dark:text-emerald-50/40 font-bold uppercase tracking-tighter">${ev.courseName}</p>
                            </div>
                            <span class="text-[10px] font-black text-amber-600 bg-amber-50 dark:bg-amber-500/10 px-2 py-1 rounded-lg">${dateDisplay}</span>
                        </div>
                    `;
                });

                html += `</div></div>`;
            }

            calendarRoot.innerHTML = html;
            lucide.createIcons();

            calendarRoot.querySelector('.cal-nav-prev').addEventListener('click', () => {
                currentDate.setMonth(currentDate.getMonth() - 1);
                renderCalendar();
            });
            calendarRoot.querySelector('.cal-nav-next').addEventListener('click', () => {
                currentDate.setMonth(currentDate.getMonth() + 1);
                renderCalendar();
            });
        }

        renderCalendar();

        function updateClock() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-GB', { hour12: false });
            const timeEl = document.getElementById('currentTime');
            if (timeEl) timeEl.innerText = timeStr;
        }
        setInterval(updateClock, 1000);
        updateClock();
    });
</script>
